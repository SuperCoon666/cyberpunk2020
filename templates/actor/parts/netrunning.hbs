{{!-- netrun-tab.hbs --}}
<div class="netrun-sheet" data-tab="netrun">

  <div class="netrun-container">

    <!-- 1st line: icon, model, interface -->
    <div class="netrun-row">
      <div class="netrun-cell">
        <label class="netrun-label">{{CPLocal "NetLabel"}}</label>
        <div class="netrun-icon-frame filepicker"
             data-type="Image"
             data-target="system.netrun.icon"
             data-fp-type="image"
             data-fp-action="browse"
             title="Click to change icon">
          <img src="{{actor.system.netrun.icon}}" alt="Runner Icon" />
        </div>
        <input type="text"
               name="system.netrun.icon"
               data-dtype="String"
               value="{{actor.system.netrun.icon}}"
               style="display: none;" />
      </div>

      <div class="netrun-cell">
        <label class="netrun-label">{{CPLocal "NetCyberdeckName"}}</label>
        <input type="text"
               name="system.netrun.deckModel"
               data-dtype="String"
               placeholder="{{CPLocal 'NetDeckPlaceholder'}}"
               value="{{actor.system.netrun.deckModel}}" />
      </div>

      <div class="netrun-cell">
        <label class="netrun-label">{{CPLocal "NetInterface"}}</label>
        <input type="number"
               class="interface-skill-roll"
               style="cursor:pointer;"
               value="{{interfaceSkill.value}}"
               readonly
               data-skill-id="{{interfaceSkill.itemId}}" />
      </div>
    </div><!-- /netrun-row -->


    <!-- 2nd line: CPU, Speed, DataWall, RAM (Strength removed) -->
    <div class="netrun-row-four">
      <div class="netrun-cell">
        <label class="netrun-label">{{CPLocal "NetCPU"}}</label>
        <input type="number"
               name="system.netrun.cpu"
               data-dtype="Number"
               class="short-input"
               placeholder="0"
               value="{{actor.system.netrun.cpu}}" />
      </div>
      <div class="netrun-cell">
        <label class="netrun-label">{{CPLocal "NetSpeed"}}</label>
        <input type="number"
               name="system.netrun.speed"
               data-dtype="Number"
               class="short-input"
               placeholder="0"
               value="{{actor.system.netrun.speed}}" />
      </div>
      <div class="netrun-cell">
        <label class="netrun-label">{{CPLocal "NetDataWall"}}</label>
        <input type="number"
               name="system.netrun.dataWall"
               data-dtype="Number"
               class="short-input"
               placeholder="0"
               value="{{actor.system.netrun.dataWall}}" />
      </div>
      <div class="netrun-cell">
        <label class="netrun-label">{{CPLocal "NetStrength"}}</label>
        <input type="number"
               name="system.netrun.strength"
               data-dtype="Number"
               class="short-input"
               placeholder="0"
               value="{{actor.system.netrun.strength}}" />
      </div>
      <div class="netrun-cell netrun-cell-ram">
        <label class="netrun-label">{{CPLocal "NetRAM"}}</label>
        <div class="netrun-ram-info">
          <div>{{CPLocal "NetRAMUsed"}}: <span>{{actor.system.netrun.ramUsed}}</span></div>
          <div>{{CPLocal "NetRAMMax"}}:
            <input type="number"
                   name="system.netrun.ramMax"
                   data-dtype="Number"
                   class="netrun-ram-short"
                   placeholder="0"
                   value="{{actor.system.netrun.ramMax}}" />
          </div>
        </div>
      </div>
    </div><!-- /netrun-row-four -->

    <!-- 3rd line: Deck Type + Options -->
    <div class="netrun-options-row">
      <div class="netrun-cell">
        <label class="netrun-label">{{CPLocal "NetDeckType"}}</label>
        <select class="deck-type-select" name="system.netrun.deckType" data-dtype="String">
          <option value="cellular" {{#if (eq actor.system.netrun.deckType "cellular")}}selected{{/if}}>{{CPLocal "NetDeckTypeCellular"}}</option>
          <option value="portable" {{#if (eq actor.system.netrun.deckType "portable")}}selected{{/if}}>{{CPLocal "NetDeckTypePortable"}}</option>
          <option value="combat"   {{#if (eq actor.system.netrun.deckType "combat")}}selected{{/if}}>{{CPLocal "NetDeckTypeCombat"}}</option>
          <option value="implant"  {{#if (eq actor.system.netrun.deckType "implant")}}selected{{/if}}>{{CPLocal "NetDeckTypeImplant"}}</option>
          <option value="standard" {{#if (eq actor.system.netrun.deckType "standard")}}selected{{/if}}>{{CPLocal "NetDeckTypeStandard"}}</option>
        </select>
      </div>
      <div class="netrun-cell">
        <label class="netrun-label">{{CPLocal "NetOptions"}}</label>
        <div class="deck-options">
          <label class="deck-option">
            <input type="checkbox"
                   name="system.netrun.hasElectrodes"
                   data-dtype="Boolean"
                   {{#if actor.system.netrun.hasElectrodes}}checked{{/if}} />
            {{CPLocal "NetOptionElectrodes"}}
          </label>
          <label class="deck-option">
            <input type="checkbox"
                   name="system.netrun.hasKeyboard"
                   data-dtype="Boolean"
                   {{#if actor.system.netrun.hasKeyboard}}checked{{/if}} />
            {{CPLocal "NetOptionKeyboard"}}
          </label>
          <label class="deck-option">
            <input type="checkbox"
                   name="system.netrun.hasScreen"
                   data-dtype="Boolean"
                   {{#if actor.system.netrun.hasScreen}}checked{{/if}} />
            {{CPLocal "NetOptionScreen"}}
          </label>
          <label class="deck-option">
            <input type="checkbox"
                   name="system.netrun.hasPrinter"
                   data-dtype="Boolean"
                   {{#if actor.system.netrun.hasPrinter}}checked{{/if}} />
            {{CPLocal "NetOptionPrinter"}}
          </label>
          <label class="deck-option">
            <input type="checkbox"
                   name="system.netrun.hasChipReader"
                   data-dtype="Boolean"
                   {{#if actor.system.netrun.hasChipReader}}checked{{/if}} />
            {{CPLocal "NetOptionChipReader"}}
          </label>
          <label class="deck-option">
            <input type="checkbox"
                   name="system.netrun.hasVoxBox"
                   data-dtype="Boolean"
                   {{#if actor.system.netrun.hasVoxBox}}checked{{/if}} />
            {{CPLocal "NetOptionVoxBox"}}
          </label>
          <label class="deck-option">
            <input type="checkbox"
                   name="system.netrun.hasScanner"
                   data-dtype="Boolean"
                   {{#if actor.system.netrun.hasScanner}}checked{{/if}} />
            {{CPLocal "NetOptionScanner"}}
          </label>
          <label class="deck-option">
            <input type="checkbox"
                   name="system.netrun.hasExtraChip"
                   data-dtype="Boolean"
                   {{#if actor.system.netrun.hasExtraChip}}checked{{/if}} />
            {{CPLocal "NetOptionExtraChip"}}
          </label>
        </div>
      </div>
    </div><!-- /netrun-options-row -->

  </div><!-- /netrun-container -->

  <!-- ACTIVE PROGRAMS block -->
  <div class="netrun-active-programs-container" style="margin-top: 10px;">
    <label class="netrun-label">{{CPLocal "NetActivePrograms"}}</label>
    <!-- data-drop-target="active-programs" -->
    <div class="netrun-active-icons" data-drop-target="active-programs">
      {{#each netrunActivePrograms}}
      <div class="netrun-active-icon" data-item-id="{{this.id}}">
        <img src="{{this.img}}" alt="{{this.name}}" title="{{this.name}}" />
      </div>
      {{/each}}
    </div>
  </div>

    <!-- List of all programs (2 columns) -->
    <div class="field-list netrun-program-list" data-drop-target="program-list">
    {{#each netrunPrograms}}
        <div class="field netrun-program"
            data-item-id="{{this.id}}"
            draggable="true">
        <div class="program-left">
            <img src="{{this.img}}" alt="{{CPLocal 'NetProgramIcon'}}" />
            <label class="program-name">{{this.name}}</label>
            <span class="program-type">({{this.system.programType}})</span>
        </div>
        <div class="program-controls">
            <i class="fas fa-edit"></i>
            <i class="fas fa-trash"></i>
        </div>
        </div>
    {{/each}}
    </div>

</div><!-- /netrun-sheet -->
